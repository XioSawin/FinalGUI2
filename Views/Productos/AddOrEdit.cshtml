@model Mvc6.Models.Producto

@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Productos", FormMethod.Post, new {enctype= "multipart/form-data"/*, onsubmit = "return SubmitForm(this)"*/}))
{
    @Html.HiddenFor(model => model.ProductID)
    <div class="form-group">
        @Html.LabelFor(model => model.ProductImg, new { @class = "control-label col-md-2" })
        <input type="file" name="postedFile" value="postedFile" id="postedFile"/>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ProductName, new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control col-md-10" } })
        @Html.ValidationMessageFor(model => model.ProductName)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ProductDescription, new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.ProductDescription, new { htmlAttributes = new { @class = "form-control col-md-10" } })
        @Html.ValidationMessageFor(model => model.ProductDescription)

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Stock, new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control col-md-10" } })
        @Html.ValidationMessageFor(model => model.Stock)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Precio, new { @class = "control-label col-md-2" })
        <div class="input-group">
            <span class="input-group-addon">$</span>
            @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control col-md-10" } })
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" style="width:80px" />
    </div>

}
